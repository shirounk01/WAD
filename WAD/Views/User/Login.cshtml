@model UserInfo


<div class="center-div">
	<h1 class="text-primary">Log in aaa!</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<form id="account" method="post">

		<div class="mb-3">
			<label class="form-label">Email address</label>
			<input value="user@email.com" asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label class="form-label">Password</label>
			<input value="password" asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<button asp-controller="User" asp-action="Login" type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Submit</button>
	</form>
	<br>
		<p class="text-primary font-italic">Don't have an account? <a asp-controller="User" asp-action="Register">Sign up</a>!</p>
</div>
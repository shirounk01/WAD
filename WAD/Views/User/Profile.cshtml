@{
	ViewData["Title"] = "Profile";
}

<div class="center-div">
	<div class="infocard">
		<div class="infocard-container col-md">
			<img src="" class="infocard-img" id="profilePicture">
		</div>
		<div class="infocard-body col-md-8">
			<h4>Name: X Y Z</h4>
			<p>Email: example@example.com</p>
			<p>Number of booked flights: 3</p>
			<p>Number of booked accommodation: 2</p>
		</div>
	</div>
	<h4>Flights history</h4>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th scope="col">From</th>
				<th scope="col">To</th>
				<th scope="col">Company</th>
				<th scope="col">Price</th>
				<th scope="col">Booking date</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td scope="row">depLoc</td>
				<td>arrLoc</td>
				<td>company</td>
				<td>$1,000</td>
				<td>2022-03-20 11:30pm</td>
			</tr>
			<tr>
				<td scope="row">depLoc</td>
				<td>arrLoc</td>
				<td>company</td>
				<td>$1,000</td>
				<td>2022-03-20 11:30pm</td>
			</tr>

		</tbody>
	</table>
	<hr>
	<h4>Accommodations history</h4>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Location</th>
				<th scope="col">Price</th>
				<th scope="col">Booking date</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td scope="row">hotel name</td>
				<td>arrLoc</td>
				<td>$1,000</td>
				<td>2022-03-20 11:30pm</td>
			</tr>
			<tr>
				<td scope="row">hotel name</td>
				<td>arrLoc</td>
				<td>$1,000</td>
				<td>2022-03-20 11:30pm</td>
			</tr>

		</tbody>
	</table>
</div>